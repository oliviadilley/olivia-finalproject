{% extends '_templates/base.njk' %}

{% block page_title %}Tour{% endblock %}

{% block page_description %}This page will show you all the tour dates for Queen.{% endblock %}

{% block content %}
<div class="container">
  <h1>Tour Dates</h1>
  <table class="table table-bordered table-dark">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">City</th>
        <th scope="col">Country</th>
        <th scope="col">Venue</th>
      </tr>
    </thead>
    {% for show in queen.tour %}
    <tbody>
      <tr>
        <td>{{ show.date }}</td>
        <td>{{ show.city }}</td>
        <td>{{ show.country }}</td>
        <td>{{ show.venue }}</td>
      </tr>
    </tbody>
    {% endfor %}
  </table>
</div>
{% endblock %}
